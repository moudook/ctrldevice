<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CtrlDevice Agent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/inputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tell the agent what to do..."
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/executeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Execute" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMERGENCY STOP"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Status: Idle"
            android:textColor="#666666"
            android:gravity="center"/>

        <!-- Agent Dashboard -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#E3F2FD"
            app:cardCornerRadius="8dp"
            app:contentPadding="12dp"
            app:strokeColor="#BBDEFB"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/brainReasoningText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ§  Brain: Waiting..."
                android:textStyle="italic"
                android:textColor="#0D47A1"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#FFF3E0"
            app:cardCornerRadius="8dp"
            app:contentPadding="12dp"
            app:strokeColor="#FFE0B2"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/strategyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”§ Strategy: Default"
                android:textColor="#E65100"/>
        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/thinkingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Accessibility Settings"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/configButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configure Agent"
            android:backgroundTint="#757575"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/skillsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Skills"
            android:backgroundTint="#009688"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/overlayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Overlay"
            android:backgroundTint="#673AB7"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/graphButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Graph"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agent Thoughts:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/logRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:scrollbars="vertical"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/micFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        app:fabCustomSize="80dp"
        app:maxImageSize="48dp"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        android:contentDescription="Voice Command"
        app:backgroundTint="#2196F3"
        app:tint="#FFFFFF"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
