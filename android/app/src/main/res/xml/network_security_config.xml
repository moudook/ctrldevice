<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 
      Security Configuration:
      By default, Android blocks "http" (Cleartext). 
      We strictly enforce HTTPS for the production API.
    -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.openai.com</domain>
        <domain includeSubdomains="true">api-inference.huggingface.co</domain>
    </domain-config>

    <!-- 
      Allow HTTP only for local development (e.g., ADB reverse to laptop).
      Remove this block in production! 
    -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android Emulator host alias -->
    </domain-config>
</network-security-config>
